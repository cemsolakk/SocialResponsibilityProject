@model  SCRP.Web.Models.Posts.PostListViewModel
@{
    ViewBag.Title = "MyPetsFound";
}


<!-- popular_causes_area_start  -->
<div class="popular_causes_area pt-120">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-9">
                <div class="section_title text-center mb-55">
                    <h3><span style="font-size:21px; padding-bottom:7px;">My Founded Advertisements</span></h3>
                </div>
            </div>
        </div>
        <div class="row">

            @{foreach (var post in Model.Posts)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="single_cause">
                            <div class="thumb max">
                                <img class="imageOpacityMK" src="@Url.Content("~/images/" + post.ImagePostMappings[0].Image.Path)" alt="">
                            </div>
                            <div class="causes_content">
                                <div class="balance justify-content-between align-items-center textCenterMK">
                                    <span>
                                        <a href="#"><img src="~/Content/img/cross-remove-sign.png" class="leftRightMarginMK"></a>
                                        <a href="@Url.Action("EditAdvertisement", "Member",new { id = post.Id })"><img src="~/Content/img/write-a-note.png"></a>
                                    </span>
                                    <br>
                                    <br>
                                    <span class="span2">PET ID: #@post.Id</span>
                                    <br>
                                    <span class="span1">
                                        @post.Title
                                        @post.District
                                    </span>
                                </div>
                                <p>Disappeared on @post.MissedDate.</p>
                                <a class="read_more" href="@Url.Action("AdvertisementDetail", "Member",new { id = post.Id })">View Detail</a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
