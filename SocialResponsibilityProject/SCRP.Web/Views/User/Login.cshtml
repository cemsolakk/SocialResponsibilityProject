@model  SCRP.Web.Models.User.UserEditViewModel
@{
    ViewBag.Title = "Login";
}

<!-- popular_causes_area_start  -->
<div class="popular_causes_area cause_details mt-5">
    <div class="container">
        <div class="row ">
            <div class="col-lg-12">
                <div class="section_title text-center">
                    <h3><span>Member Login</span></h3>
                    <div class="causes_content">
                        <h4>Please login in to access your Members area.</h4>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="single_cause">
                    <div class="limiter">
                        <div class="container-login100" style="background-image: url('../Content/images/bg-01.jpg');">
                            <div class="wrap-login100">
                                <form method="post" action="LoginPost">
                                    <div class="wrap-input100 validate-input" data-validate="Enter Username">
                                        <input name="email" placeholder="Email" class="input100 paddingDeleteMK" type="email" required />

                                        <span class="focus-input100"></span>
                                    </div>

                                    <div class="wrap-input100 validate-input" data-validate="Enter Password">
                                        <input name="password" type="password" class="input100 paddingDeleteMK" placeholder="Password" required />

                                        <span class="focus-input100"></span>
                                    </div>

                                    <div class="container-login100-form-btn">
                                        <input type="submit" class="login100-form-btn" value="Login" />
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- popular_causes_area_end  -->
